{
  "extends": "stylelint-config-standard-scss",
  "syntax": "scss",
  "rules": {
    "indentation": 2,
    "string-quotes": "double",
    "no-extra-semicolons": true,
    "function-url-quotes": "always",
    "number-max-precision": 3,
    "max-nesting-depth": 2,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["function", "if", "each", "include", "mixin", "return", "else", "error"]
      }
    ]
  }
}